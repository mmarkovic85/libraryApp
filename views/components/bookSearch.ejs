<section class="bookSearch">
  <form action="/books" method="POST">
    <fieldset>

      <legend>Search library book collection:</legend>

      <section class="input">
        <section class="labels">
          <label for="idAuthor">Author:</label>
          <label for="idTitle">Title:</label>
          <label for="idYear">Year:</label>
          <label for="idLanguage">Language:</label>
        </section>

        <section class="inputs">
          <input type="text" name="author" id="idAuthor">
          <input type="text" name="title" id="idTitle">
          <input type="text" name="year" id="idYear">
          <input type="text" name="language" id="idLanguage">
        </section>
      </section>

      <button type="submit">Search!</button>

    </fieldset>
  </form>

  <table class="bookSearchResult">
    <caption>Your search results: <span class="numOfBooks"></span> book(s)</caption>
    <thead>
      <tr>
        <th>Author</th>
        <th>Title</th>
        <th>Year</th>
        <th>Language</th>
        <th>Available</th>
      </tr>
    </thead>
    <tbody class="booksContainer">
    </tbody>
  </table>

  <script src="../logic/bookSearch.js" type="module"></script>
</section>